<div class="flex bg-orange-200 justify-center items-center h-screen">
  <div class= " bg-white w-full max-w-md mx-2 rounded-xl px-4 py-6 shadow-lg">
    <h3 class="text-xl mt-2 hover:text-orange-300 duration-200">Chat App</h3>
    <div class="chatbox rounded-lg h-[40vh] w-full flex flex-col border border-gray-300 gap-2 px-2 py-4 my-4 overflow-auto">
    <%= render @messages%>  
    </div>
    <div class="message flex justify-between">
    <form class="flex w-full" action='chatroom/add' method="post">
